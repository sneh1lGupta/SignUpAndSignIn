@{
    <h1>ViewBag.Message</h1>
}
<form action="/ThankYou" method="post">
    <label>Name</label>
    <input type="text" name="name" value="" size="15" />
    <br />
    <label>Email</label>
    <input type="email" name="email" value="" size="15" />
    <br />
    <label>Password</label>
    <input type="password" name="password" value="" size="15" />
    <br />
    <input type="button" name="submit" value="Sign Up" onclick="location.href='@Url.Action("ThankYou","Home")'" />
</form>